<h1>ユーザ一覧</h1>

<%= link_to "新規登録", new_admin_user_path, class: "btn btn-info btn-sm" %>

<table>
  <tr>
    <th>ユーザ名</th>
    <th>メールアドレス</th>
    <th>タスク数</th>
    <th>管理者権限</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks.size %></td>
    <td><%= user.admin %></td>
    <td><%= link_to "編集", edit_admin_user_path(user.id), class:"btn btn-success btn-sm" %></td>
    <td><%= link_to "削除", admin_user_path(user.id), method: :delete, data: {confirm: "本当に削除して良いですか？"}, class: "btn btn-danger btn-sm" %></td>
  </tr>
  <% end %>
</table>