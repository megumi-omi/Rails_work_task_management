<h1>タスク一覧</h1>
<p><%= notice %></p>

<table>
  <tr>
    <%= form_with scope: :task, url: tasks_path, method: :get, local: true do |form| %>
      <%= form.text_field :title %>
      <%= form.select :status, Task.statuses.keys.to_a, { include_blank: '選択してください' }, include_blank: true %>
      <%= form.submit '検索' %>
    <% end %>
    </tr>
  <tr>
    <th><%= link_to "終了期限でソートする", tasks_path(sort_deadline: "true") %></tr>
    <th><%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %></tr>
  <tr>
    <th>タスク名</th>
    <th>詳細</th>
    <th>ステータス</th>
    <th>優先順位</th>
    <th>終了期限</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td class="task_row_title"><%= task.title %></td>
      <td class="task_row"><%= task.content %></td>
      <td class="task_row"><%= task.status %></td>
      <td class="task_row_priority"><%= task.priority %></td>
      <td class="task_row"><%= task.deadline %></td>
      <td><%= link_to "詳細", task_path(task.id) %></td>
      <td><%= link_to "編集", edit_task_path(task.id) %></td>
      <td><%= link_to "削除", task_path(task.id), method: :delete, data: {confirm: "本当に削除して良いですか？"} %></td>
    </tr>
  <% end %>
  </table>

  <%= paginate @tasks %>